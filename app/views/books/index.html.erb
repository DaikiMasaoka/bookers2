<div class="container">
  <div class="row">

    <div class="col-lg-4">
      <h1>user</h1>
    </div>
    <div class="col-lg-8">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>